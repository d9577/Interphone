<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/channel_list_item_validCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:paddingRight="4dp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/channel_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/channel_list_item_validCheckBox"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:text="信道列表"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/channel_list_item_nicknameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/channel_list_item_titleTextView"
        android:layout_toLeftOf="@id/channel_list_item_validCheckBox"
        android:padding="4dp"
        android:text="信道别名" />

</RelativeLayout>